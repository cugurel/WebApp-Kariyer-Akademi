@using Entity.Concrete
@model Director

@{
    ViewData["Title"] = "AddMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
        crossorigin="anonymous"></script>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Film Arşivi Yönetimi/</span> Kategori Ekleme Formu</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">

                <div class="card-header d-flex align-items-center justify-content-between">
                </div>
                <div class="card-body">
                    <form action="/Director/UpdateDirector" id="example-form" onsubmit="sendForm(event)" method="post">
                        <div class="row mb-3">
                            <input type="hidden" name="Id" value="@Model.Id" class="form-control" id="basic-default-name" />
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Yönetmen Adı</label>
                            <div class="col-sm-10">
                                <input type="text" name="Name" value="@Model.Name" class="form-control" id="basic-default-name" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Yönetmen Soyadı</label>
                            <div class="col-sm-10">
                                <input type="text" name="Surname" value="@Model.Surname" class="form-control" id="basic-default-name" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Yönetmen Ülke</label>
                            <div class="col-sm-10">
                                <input type="text" name="Country" value="@Model.Country" class="form-control" id="basic-default-name" />
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Yönetmeni Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


<script>
    function sendForm(e) {
        e.preventDefault();

        Swal.fire({
            title: 'Güncellemek istediğinizden emin misiniz?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: "Evet!",
            cancelButtonText: "Vazgeç"
        }).then(result => {
            if (result.isConfirmed) {
                const myForm = document.getElementById('example-form');
                myForm.submit();
            }
        })
    }
</script>