@using Entity.Concrete
@model Category
@{
    ViewData["Title"] = "UpdateMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Kategory Yönetimi/</span> Kategori Güncelleme Formu</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                </div>
                <div class="card-body">
                    <form action="/Category/UpdateCategory" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" class="form-control" id="basic-default-name" placeholder="Kategori adı giriniz..." />
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Film Adı</label>
                            <div class="col-sm-10">
                                <input type="text" name="Name" value="@Model.Name" class="form-control" id="basic-default-name" placeholder="Film adı giriniz..." />
                            </div>
                        </div>
                        

                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


